      <directory>${project.basedir}/target/nar/lib/${nar.aol}/shared</directory>
      <outputDirectory></outputDirectory>      
      <includes>
        <include>*.dylib</include>
        <include>*.so</include>
        <include>*.dll</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/target/nar/</directory>
      <outputDirectory></outputDirectory>      
      <includes>
         <include>*.ini</include>
         <include>*.ned</include>
