  <id>exec</id>
  <formats>
    <format>dir</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>${project.basedir}/target/nar/bin/${nar.aol}</directory>
      <outputDirectory></outputDirectory>      
      <includes>
        <include>*</include>
      </includes>
      <excludes>
        <exclude>history.xml</exclude>
